{
  "manifest_version": 2,

  "name": "No New Tabs",
  "description": "Automatically close any new tabs or windows.",
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "64": "icon64.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "background",
    "contextMenus"
  ]
}
